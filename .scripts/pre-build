     .split("/")
     .map((segment) =>
       segment
+        .toLocaleLowerCase()
+        .normalize('NFD')
+        .replace(/[\u0300-\u036f]/g, "")  // Accents
+        .replace(/\u2013|\u2014/g, "-")   // en dash, em dash
